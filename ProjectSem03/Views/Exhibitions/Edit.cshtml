@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

@model ProjectSem03.Models.Exhibition

<div class="container">
    <div class="row">
        <div class="col-lg-12 mx-auto row">
            <div class="card col-lg-5 col-sm-12 mx-auto">
                <div class="card-header text-center">
                    <h3 class="card-title float-none">
                        Edit Exhibition
                    </h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "Exhibitions", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div>
                            @Html.HiddenFor(model => model.ExhibitionId)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ExhibitionName, "Exhibition Name")
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.ExhibitionName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ExhibitionName)
                            @ViewBag.ExName
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Place)
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.Place, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Place)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.StartDate, "Start Date")
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.StartDate)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.EndDate, "End Date")
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EndDate)
                        </div>

                        <div class="form-group">
                            <label>Staff Name: </label>
                            <div>
                                @Html.DropDownList("StaffId", (IEnumerable<SelectListItem>)ViewBag.data, new { @class = "form-control" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group text-center">
                            <input class="btn btn-primary" type="submit" value="Update" onclick="return confirm('Are you sure?')"/>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <h3>@ViewBag.Msg</h3>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

