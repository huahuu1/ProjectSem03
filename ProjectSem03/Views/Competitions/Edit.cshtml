@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

@model ProjectSem03.Models.Competition

<div class="container">
    <div class="row">
        <div class="col-lg-12 mx-auto row">
            <div class="card col-lg-5 col-sm-12 mx-auto">
                <div class="card-header text-center">
                    <h3 class="card-title float-none">
                        Edit Competition
                    </h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "Competitions", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div>
                            @Html.HiddenFor(model => model.CompetitionId)
                        </div>
                        @*<div>
                            @Html.HiddenFor(model => model.StaffId)
                        </div>*@

                        <div class="form-group">
                            @Html.LabelFor(model => model.CompetitionName, "Competition Name")
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.CompetitionName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CompetitionName)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.StartDate, "Start Date")
                            <span class="text text-danger">*</span>
                            @Html.TextBoxFor(model => model.StartDate, "{0:dd/MM/yyyy hh:mm tt}", new { @class = "form-control datetimepicker" })
                            @Html.ValidationMessageFor(model => model.StartDate)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.EndDate, "End Date")
                            <span class="text text-danger">*</span>
                            @Html.TextBoxFor(model => model.EndDate, "{0:dd/MM/yyyy hh:mm tt}", new { @class = "form-control datetimepicker" })
                            @Html.ValidationMessageFor(model => model.EndDate)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Description)
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>

                        <div class="form-group">
                            <label>Staff Name: </label>
                            <div>
                                @Html.DropDownList("StaffId", (IEnumerable<SelectListItem>)ViewBag.data, "-- Select Staff --", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.CompetitionImages, "Competition Image")
                            <span class="text text-danger">*</span>
                            <div class="input-group mb-3">
                                <div class="custom-file">
                                    <input type="file" class="custom-file" id="customFile" name="file">
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <img width="200" src="@Html.DisplayFor(model => model.CompetitionImages)" alt="" />
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <input class="btn btn-primary" type="submit" value="Update" onclick="return confirm('Are you sure?')" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <h3>@ViewBag.Msg</h3>
</div>

<div>
    @Html.ActionLink("Back to list ", "Index", "Competitions")
</div>
