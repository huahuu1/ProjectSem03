@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

@model ProjectSem03.Models.Competition

<h2>Edit Competition</h2>
<br />
@using (Html.BeginForm("Edit", "Competitions", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        @Html.HiddenFor(model => model.CompetitionId)
    </div>
    <div>
        @Html.HiddenFor(model => model.StaffId)
    </div>
    <div>
        @Html.LabelFor(model => model.CompetitionName)
        @Html.EditorFor(model => model.CompetitionName)
        @Html.ValidationMessageFor(model => model.CompetitionName)
    </div>

    <div>
        @Html.LabelFor(model => model.StartDate)
        @Html.TextBoxFor(model => model.StartDate, "{0:dd/MM/yyyy hh:mm tt}", new { @class = "form-control datetimepicker" })
        @Html.ValidationMessageFor(model => model.StartDate)
    </div>
    <div>
        @Html.LabelFor(model => model.EndDate)
        @Html.TextBoxFor(model => model.EndDate, "{0:dd/MM/yyyy hh:mm tt}", new { @class = "form-control datetimepicker" })
        @Html.ValidationMessageFor(model => model.EndDate)
    </div>
    <div>
        @Html.LabelFor(model => model.Description)
        @Html.TextAreaFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </div>
    <div>
        @Html.LabelFor(model => model.CompetitionImages)
        <img src="@Html.DisplayFor(model => model.CompetitionImages)" width="100" height="100" />
        <input type="file" name="file" />
    </div>
    <br />
    <div>
        <input type="submit" value="Update" class="btn-warning" onclick="return confirm('Are you sure?')" />
    </div>
}

<div>
    <h3>@ViewBag.Msg</h3>
</div>

<div>
    @Html.ActionLink("Back to list ", "Index", "Competitions")
</div>
