@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

@model ProjectSem03.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 mx-auto row">
            <div class="card col-lg-5 col-sm-12 mx-auto">
                <div class="card-header text-center">
                    <h3 class="card-title float-none">
                        Edit Student
                    </h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "Students", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div>
                            @Html.HiddenFor(model => model.StudentId)
                        </div>

                        <div>
                            @Html.LabelFor(model => model.Password, "Password")
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>

                        <div>
                            @Html.LabelFor(model => model.FirstName, "First Name")
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FirstName)
                        </div>

                        <div>
                            @Html.LabelFor(model => model.LastName, "Last Name")
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>

                        <div>
                            @Html.LabelFor(model => model.DateOfBirth, "Date Of Birth")
                            <span class="text text-danger">*</span>
                            <input asp-for="DateOfBirth" class="form-control" />
                            @Html.ValidationMessageFor(model => model.DateOfBirth)
                        </div>

                        <div>
                            @Html.LabelFor(model => model.JoinDate, "Join Date")
                            <span class="text text-danger">*</span>
                            <input asp-for="JoinDate" class="form-control" />
                            @Html.ValidationMessageFor(model => model.JoinDate)
                        </div>

                        <div class="form-group">
                            <label asp-for="Gender" class="control-label"></label>
                            <div>
                                @Html.RadioButtonFor(s => s.Gender, "Male")<span>Male</span>
                                @Html.RadioButtonFor(s => s.Gender, "Female")<span>Female</span>
                            </div>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div>
                            @Html.LabelFor(model => model.Phone)
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Phone)
                            @ViewBag.Phone
                        </div>

                        <div>
                            @Html.LabelFor(model => model.Email)
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email)
                            @ViewBag.Email
                        </div>

                        <div>
                            @Html.LabelFor(model => model.Address)
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>

                        <div>
                            @Html.LabelFor(model => model.ProfileImage, "Profile Image")
                            <span class="text text-danger">*</span>
                            <div class="input-group mb-3">
                                <div class="custom-file">
                                    <input type="file" class="custom-file" id="customFile" name="file">
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                </div>
                            </div>

                            <div class="text-center">
                                <img src="@Html.DisplayFor(s => s.ProfileImage)" alt="" />
                            </div>
                            @ViewBag.Painting
                        </div>
                        <br />
                        <div class="form-group text-center">
                            <input class="btn btn-primary" type="submit" value="Update" onclick="return confirm('Are you sure?')" />
                        </div>
                    }
                </div>
        </div>
    </div>
</div>


<div>
    <h3>@ViewBag.Msg</h3>
    <a asp-action="Index">Back to List</a>
</div>

