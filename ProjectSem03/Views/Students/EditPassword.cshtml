@model ProjectSem03.Models.Student
@{
    ViewData["Title"] = "Edit Password";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 mx-auto row">
            <div class="card col-lg-5 col-sm-12 mx-auto">
                <div class="card-header text-center">
                    <h3 class="card-title float-none">
                        Edit Student Password
                    </h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("EditPassword", "Students", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            <label for="nPassword">New Password:</label>
                            <span class="text text-danger">*</span>
                            <input class="form-control" type="password" name="nPassword" />
                            <span class="error-msg">@ViewBag.nPass</span>
                        </div>

                        <div class="form-group">
                            <label for="cnPassword">Confirm New Password:</label>
                            <span class="text text-danger">*</span>
                            <input class="form-control" type="password" name="cnPassword" />
                            <span class="error-msg">@ViewBag.cnPass</span>
                        </div>
                        <br />
                        <div class="form-group text-center">
                            <input class="btn btn-primary" type="submit" value="Update" onclick="return confirm('Are you sure?')" />
                        </div>
                    }
                    @if (ViewBag.Msg != null)
                    {
                        <script type="text/javascript">
                        window.onload = function () {
                            alert("@ViewBag.Msg");
                        };
                        </script>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <h3 style="color: #ee5b54;">@ViewBag.Msg</h3>
</div>

<div>
    @Html.ActionLink("Back to list ", "Index", "Students")
</div>

