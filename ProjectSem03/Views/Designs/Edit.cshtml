@model ProjectSem03.Models.Design

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Design</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DesignId" />
            <input type="hidden" asp-for="DesignName" />
            <input type="hidden" asp-for="Painting" />
            <input type="hidden" asp-for="Description" />
            <input type="hidden" asp-for="SubmitDate" />
            <input type="hidden" asp-for="StudentId" />
            <div class="form-group">
                <label>Exhibition Name: </label>
                @Html.DropDownList("ExhibitionID", (IEnumerable<SelectListItem>)ViewBag.data)
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" onclick="return confirm('Are you sure?')" />
            </div>
        </form>
    </div>
</div>

<div>
    <h3>@ViewBag.Msg</h3>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
