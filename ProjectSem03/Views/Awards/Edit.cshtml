@model ProjectSem03.Models.Award

@{
    ViewData["Title"] = "Award";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 mx-auto row">
            <div class="card col-lg-5 col-sm-12 mx-auto">
                <div class="card-header text-center">
                    <h3 class="card-title float-none">
                        Edit Award
                    </h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "Awards", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div>
                            @Html.HiddenFor(model => model.AwardId)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AwardName, "Award Name")
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.AwardName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AwardName)
                            <span class="error-msg">@ViewBag.AwName</span>
                        </div>

                        <div class="form-group">
                            <label>Competition Name: </label>
                            <div>
                                @Html.DropDownList("CompetitionId", (IEnumerable<SelectListItem>)ViewBag.data2, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Winning Post: </label>
                            <div>
                                @Html.DropDownList("PostingId", (IEnumerable<SelectListItem>)ViewBag.data3, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Staff Name: </label>
                            <div>
                                @Html.DropDownList("StaffId", (IEnumerable<SelectListItem>)ViewBag.data, new { @class = "form-control" })
                            </div>
                        </div>

                        <br />
                        <div class="form-group text-center">
                            <input class="btn btn-primary" type="submit" value="Update" onclick="return confirm('Are you sure?')" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

