@model ProjectSem03.Models.Award

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

<h1>Edit</h1>

<h4>Award</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AwardId" />
            <div class="form-group">
                <label asp-for="AwardName" class="control-label"></label>
                <input asp-for="AwardName" class="form-control" />
                <span asp-validation-for="AwardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Competition Name: </label>
                <div>
                    @Html.DropDownList("CompetitionId", (IEnumerable<SelectListItem>)ViewBag.data2)
                </div>
                <span asp-validation-for="CompetitionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Posting Description: </label>
                <div>
                    @Html.DropDownList("PostingId", (IEnumerable<SelectListItem>)ViewBag.data3)
                </div>
                <span asp-validation-for="PostingID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Staff Name: </label>
                <div>
                    @Html.DropDownList("StaffId", (IEnumerable<SelectListItem>)ViewBag.data)
                </div>
                <span asp-validation-for="StaffId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

