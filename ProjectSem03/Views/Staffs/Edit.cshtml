@model ProjectSem03.Models.Staff

@{
    ViewData["Title"] = "Staff";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 mx-auto row">
            <div class="card col-lg-5 col-sm-12 mx-auto">
                <div class="card-header text-center">
                    <h3 class="card-title float-none">
                        Edit Staff
                    </h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "Staffs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div>
                            @Html.HiddenFor(model => model.StaffId)
                        </div>

                        <div>
                            @Html.HiddenFor(model => model.StaffName)
                        </div>

                        <div>
                            @Html.HiddenFor(model => model.Password)
                        </div>

                        <div>
                            @Html.HiddenFor(model => model.JoinDate)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ProfileImage, "Profile Image")
                            <span class="text text-danger">*</span>
                            <div class="input-group mb-3">
                                <div class="custom-file">
                                    <input type="file" class="custom-file" id="customFile" name="file">
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                </div>
                            </div>
                            <div class="text-center">
                                <img src="@Html.DisplayFor(s=>s.ProfileImage)" alt="" />
                            </div>
                            <span class="error-msg">@ViewBag.PImages</span>
                        </div>

                        <div>
                            @Html.LabelFor(model => model.Password, "Password")
                            <span class="text text-danger">*</span>
                            <td style="width: 100%">
                                <a class="btn btn-warning btn-sm my-2" asp-action="EditPassword" asp-controller="Staffs" asp-route-id="@Model.StaffId" onclick="return confirm('Are you sure?')"><i class="fas fa-folder mx-1"></i>Edit Password</a>
                            </td>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email)
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email)
                            <span class="error-msg">@ViewBag.Email</span>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Phone)
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Phone)
                            <span class="error-msg">@ViewBag.Phone</span>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Address)
                            <span class="text text-danger">*</span>
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>

                        <div>
                            @Html.HiddenFor(model => model.Role)
                        </div>
                        <br />
                        <div class="form-group text-center">
                            <input class="btn btn-primary" type="submit" value="Update" onclick="return confirm('Are you sure?')" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <h3 style="color: #ee5b54;">@ViewBag.Msg</h3>
</div>

<div>
    @Html.ActionLink("Back to list ", "Index", "Staffs")
</div>
